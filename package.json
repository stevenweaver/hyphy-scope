{
  "name": "hyphy-scope",
  "version": "1.5.0",
  "description": "Reusable Svelte components for HyPhy analysis visualization",
  "author": "Steven Weaver",
  "license": "MIT",
  "homepage": "https://github.com/stevenweaver/hyphy-scope",
  "repository": {
    "type": "git",
    "url": "https://github.com/stevenweaver/hyphy-scope.git"
  },
  "keywords": [
    "hyphy",
    "phylogenetics",
    "bioinformatics",
    "svelte",
    "visualization",
    "components",
    "selection-analysis"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "dependencies": {
    "@observablehq/plot": "^0.6.11",
    "d3": "^7.8.5",
    "lodash-es": "^4.17.21",
    "phylotree": "^2.1.7"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-svelte-csf": "^5.0.7",
    "@storybook/blocks": "^8.6.14",
    "@storybook/svelte": "^8.6.14",
    "@storybook/sveltekit": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/svelte": "^5.2.8",
    "@types/d3": "^7.4.0",
    "@types/eslint": "^9.6.0",
    "@types/lodash-es": "^4.17.9",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.2.0",
    "storybook": "^8.6.14",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.11",
    "vitest": "^3.2.4"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts"
}
